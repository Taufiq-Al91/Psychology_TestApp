<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarActivity">

    <ImageView
        android:id="@+id/simpleImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo_startup"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="340dp"
        android:layout_height="480dp"
        android:layout_below="@id/simpleImageView"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_form_them" />
    <TextView
        android:id="@+id/txt_Logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignTop="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:text="Daftar PsyTest"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_Logo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Buat Akun Untuk Melihat Kuis Yang Seru -"
        android:layout_below="@id/txt_Logo"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Email"
        android:layout_below="@id/txt_Logo2"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txt_nama"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nama Lengkap"
        android:layout_below="@id/txt_email"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txt_nama_pengguna"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nama Pengguna"
        android:layout_below="@id/txt_nama"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/txt_password"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:hint="Kata Sandi"
        android:layout_below="@id/txt_nama_pengguna"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_password"
        android:layout_marginTop="10dp"
        android:text="Daftar"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>