<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/txt_cl_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
    android:id="@+id/simpleImageView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/ic_logo_startup"
    android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="340dp"
        android:layout_height="480dp"
        android:layout_below="@id/simpleImageView"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_form_them" />
    <TextView
        android:id="@+id/txt_Logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignTop="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:text="Ubah Profile"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/txt_Logo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Kamu dapat mengubah profilemu sesuka hati ! -"
        android:layout_below="@id/txt_Logo"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txt_cl_pengguna"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nama Pengguna lama"
        android:layout_below="@id/txt_Logo2"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txt_cl_lengkap"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nama Lengkap Baru"
        android:layout_below="@id/txt_cl_pengguna"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/txt_cl_password"
        android:layout_width="200dp"
        android:layout_alignLeft="@+id/myImageView"
        android:layout_alignRight="@+id/myImageView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:hint="Kata Sandi Baru"
        android:layout_below="@id/txt_cl_lengkap"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cl_password"
        android:layout_marginTop="10dp"
        android:text="SIMPAN"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_simpan"
        android:layout_marginTop="10dp"
        android:text="Kembali"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>