<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
  <TextView
      android:id="@+id/atas"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/img_logo"
      android:layout_width="300dp"
      android:layout_height="250dp"
      android:layout_marginTop="48dp"
      android:src="@drawable/ic_logo_startup"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.504"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/atas" />


  <TextView
      android:id="@+id/kosong1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/img_logo"/>


  <EditText
      android:id="@+id/edt_username"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:inputType="text"
      android:hint="Nama Pengguna"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/kosong1"
      app:layout_constraintTop_toBottomOf="@id/img_logo"/>

  <TextView
      android:id="@+id/kosong2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/edt_username"/>

  <EditText
      android:id="@+id/edt_password"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:inputType="textPassword"
      android:hint="Kata Sandi"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/kosong2"
      app:layout_constraintTop_toBottomOf="@id/edt_username"/>

  <Button
      android:id="@+id/btn_masuk"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Masuk"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/edt_password"/>

  <TextView
      android:id="@+id/txt_Atau"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="---ATAU---"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_masuk"/>

  <Button
      android:id="@+id/btn_daftar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Daftar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_Atau"/>

  </androidx.constraintlayout.widget.ConstraintLayout>